<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardCornerRadius="5dp"
    android:elevation="5dp"
    app:cardUseCompatPadding="true">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="15dp">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/namaPemohon"
            android:text="Nama pemohon disini"
            android:layout_marginLeft="10dp" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/ICPemohon"
            android:text="IC pemohon disini"
            android:layout_marginLeft="10dp"
            android:layout_below="@id/namaPemohon"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/phonePemohon"
            android:text="no pemohon disini"
            android:layout_marginLeft="10dp"
            android:layout_below="@id/ICPemohon"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/alamatPemohon"
            android:text="alamat pemohon disini"
            android:layout_marginLeft="10dp"
            android:layout_below="@id/phonePemohon"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/sebabPemohon"
            android:text="sebab pemohon disini"
            android:layout_marginLeft="10dp"
            android:layout_below="@id/alamatPemohon"/>
    </RelativeLayout>

    </androidx.cardview.widget.CardView>
